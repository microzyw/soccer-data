{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/index.py",
            "env": {
                "FLASK_APP": "${workspaceRoot}/index.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ]
        }
    ]
}